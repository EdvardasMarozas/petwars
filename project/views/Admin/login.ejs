<%- include("../layout/header", {title: title}) %>
<div class="container mx-auto" style="width: 23%">
  <h1 class="text-warning text-center"><%= title %></h1>

  <%- include("../messages") %>

  <form action="/login" method="post">
    <div class="mb-3">
      <label for="emailInput" class="form-label fs-5" style="color: #ff6f3c"
        >Email</label
      >
      <input
        style="background: rgba(255, 255, 255, 0.5)"
        type="email"
        class="form-control"
        name="email"
        id="emailInput"
        value="<%= old ? old.email : '' %>"
        placeholder="example@gmail.com"
        required
      />
    </div>
    <div class="mb-3">
      <label for="passwordInput" class="form-label fs-5" style="color: #ff6f3c"
        >Password</label
      >
      <input
        style="background: rgba(255, 255, 255, 0.5)"
        type="password"
        class="form-control"
        name="password"
        id="passwordInput"
        value=""
        placeholder="******"
        required
      />
    </div>
    <div class="d-flex justify-content-evenly">
      <button
        type="submit"
        class="btn btn-outline-warning"
        style="font-weight: 700"
      >
        <i class="bi bi-check-circle"></i> Log In</button
      ><a
        class="btn btn-outline-warning"
        style="font-weight: 700"
        href="/petwars"
      >
        GO BACK</a
      >
    </div>
  </form>
</div>
<%- include("../layout/footer") %>
